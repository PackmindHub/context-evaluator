# Environment Configuration
# Copy this file to .env and adjust values as needed

# Node Environment
NODE_ENV=development

# API Server Configuration
PORT=3000
HOST=localhost

# API URL for frontend (used in useEvaluation hook)
VITE_API_URL=http://localhost:3000

# AI Agent Configuration
# At least one AI CLI must be installed and available in PATH:
# - Claude Code CLI (default): https://docs.anthropic.com/claude/docs/claude-cli
# - OpenCode CLI: https://github.com/opencode-ai/opencode
# Use --agent <name> in CLI or the UI dropdown to select which agent to use
DEFAULT_AGENT=claude

# Job Manager Configuration
MAX_CONCURRENT_JOBS=2
MAX_QUEUE_SIZE=20  # Maximum number of jobs in the queue (queued + running)

# Job Cleanup Configuration
JOB_TTL_MS=3600000  # 1 hour in milliseconds

# Evaluation Configuration
DEFAULT_CONCURRENCY=3
DEFAULT_EVALUATORS=12
DEFAULT_MAX_TOKENS=100000

# Debug Mode
DEBUG=false
